<% provide(:title, "お客様情報の編集") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    <div class = 'form-group'>
      <% if @user.image? %>
          <%= image_tag @user.image.url, class: 'image-setting' %>
      <% else %>
          <%= image_tag "profile.jpg", class: 'image-setting' %>
      <% end %>
      <%= f.file_field :image, class: 'image-form-control', id: 'edit-image' %>
    </div>
    <p></p>
    <div class = 'form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
    </div>
    <div class = 'form-group'>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', id: 'user_email' %>
    </div>
    <div class = 'form-group'>
      <%= f.label :telephone, "電話番号" %>
      <%= f.text_field :telephone, class: 'form-control', id: 'user_telephone' %>
    </div>
    <div class = 'form-group'>
      <%= f.label :birth_day, "生年月日", class: 'birth-date-label' %>
      <%= f.date_select :birth_date, { include_blank: true, use_month_numbers: true}, {class: 'pulltab-form-control', id: 'user_birth_date'} %>
    </div>
    <div class = 'form-group'>
      <%= f.label :address, "お住まいのご住所" %>
      <%= f.text_field :address, class: 'form-control', id: 'user_address' %>
    </div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>