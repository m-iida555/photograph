<% provide(:title,"スケジュール一覧") %>
<div class = "schedule-list-wrapper">
  <h1 class="schedule-list-title">Schedules</h1>
  <div class = "schedule-list">
  <%= month_calendar events: @schedules do |date, schedules| %>
    <%= date.day %>
    <% schedules.each do |schedule| %>
      <div>
        <%= schedule.start_time.hour %>:<%= schedule.start_time.min %>
        <%= schedule.name %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>